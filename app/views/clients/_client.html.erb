<div id="<%= dom_id client %>">
  <tr>
    <th scope="row"><%= client.id %></th>
    <td><%= client.name %></td>
    <td><%= client.age %></td>
    <td><%= client.movies.last %></td>
    <br>
    <td><%= link_to "Mostrar Cliente", client, class: "btn btn-primary" %></td>
    <td><%= link_to "Editar Cliente", edit_client_path(client), class: "btn btn-primary" %></td>
     <td><%= button_to "Eliminar Cliente", @client, method: :delete, class: "btn btn-primary" %></td>
  </tr>
</div>
